# Server/API environment template
NODE_ENV=development
PORT=4000

# Public URLs exposed to clients and the settings screen
PUBLIC_API_URL=https://api.example.com
API_BASE_URL=https://api.example.com
API_WEBSOCKET_URL=wss://api.example.com/socket
TILE_CDN_URL=https://cdn.example.com/tiles

# Database & cache
DATABASE_URL=postgres://postgres:strongpassword@db:5432/argex_gps
DATABASE_SCHEMA=public
REDIS_URL=redis://redis:6379
REDIS_TLS_URL=rediss://redis.example.com:6380

# Auth/JWT
JWT_SECRET=change-me-with-a-secure-random-string
JWT_ISSUER=https://auth.example.com/
JWT_AUDIENCE=argex-gps-api
OIDC_DISCOVERY_URL=https://auth.example.com/.well-known/openid-configuration
AUTH_DOMAIN=auth.example.com
AUTH_CLIENT_ID=your-api-client-id
AUTH_CLIENT_SECRET=your-api-client-secret

# Map packages
MAP_STORAGE_PATH=/var/lib/argex-gps/map-packages
MAP_ARCHIVE_PATH=/var/lib/argex-gps/map-packages/archives
MAP_ARCHIVE_MOUNT=./map-packages/archives
MAP_PROVIDER_TOKEN=map-provider-token
MAP_PACKAGE_INDEX_PATH=/var/lib/argex-gps/map-packages/index.json
MAP_PACKAGE_DOWNLOAD_URL=https://downloads.example.com/maps/download

# Admin/mobile settings page defaults surfaced by the API
SETTINGS_DEFAULT_REGION=north-america
SETTINGS_DEFAULT_MAP_STYLE=outdoors
SETTINGS_FEATURE_FLAGS=offline-sync,map-packages,telemetry
