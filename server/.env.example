# Server/API environment
NODE_ENV=development
PORT=4000
PUBLIC_API_URL=http://api.argex-gps.localtest.me:4000
API_BASE_URL=http://api.argex-gps.localtest.me:4000
API_WEBSOCKET_URL=ws://api.argex-gps.localtest.me:4000
TILE_CDN_URL=http://api.argex-gps.localtest.me:4000/tiles

# Database and cache
DATABASE_URL=postgres://argex:argex@db:5432/argex_gps
DATABASE_SCHEMA=public
REDIS_URL=redis://redis:6379
REDIS_TLS_URL=

# Auth/JWT (keep in sync with client values)
JWT_SECRET=change-me
JWT_ISSUER=argex-gps-local
JWT_AUDIENCE=argex-gps-api
OIDC_DISCOVERY_URL=https://auth.argex-gps.localtest.me/.well-known/openid-configuration
AUTH_DOMAIN=auth.argex-gps.localtest.me
AUTH_CLIENT_ID=server-client-id
AUTH_CLIENT_SECRET=server-client-secret

# Map package storage
MAP_STORAGE_PATH=/var/lib/argex-gps/map-packages
MAP_ARCHIVE_PATH=/var/lib/argex-gps/map-packages/archives
MAP_ARCHIVE_MOUNT=./map-packages
MAP_PROVIDER_TOKEN=provide-token-for-cdn-or-bucket
MAP_PACKAGE_INDEX_PATH=/var/lib/argex-gps/map-packages/index.json
