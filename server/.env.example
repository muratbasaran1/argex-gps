# Server/API environment template
NODE_ENV=development
PORT=4000

# Public URLs exposed to clients and the settings screen
PUBLIC_API_URL=http://localhost:4000
API_BASE_URL=http://localhost:4000
API_WEBSOCKET_URL=ws://localhost:4000/socket
TILE_CDN_URL=http://localhost:4000/tiles

# Database
DATABASE_URL=mysql://argex:argex@mysql:3306/argex_gps
DATABASE_SCHEMA=argex_gps

# Auth/OIDC
# RS256: point to your issuer and a JWKS endpoint (or discovery URL) so keys can be rotated
OIDC_ISSUER=http://localhost/
OIDC_AUDIENCE=argex-gps-api
OIDC_JWKS_URL=https://auth.example.com/.well-known/jwks.json
OIDC_DISCOVERY_URL=https://auth.example.com/.well-known/openid-configuration
# HS256: only use when you control both issuer and consumer; must be a long, random secret (32+ chars)
OIDC_JWT_SECRET=change-me-with-a-secure-random-string
OIDC_REVOCATION_URL=https://auth.example.com/oauth/revoke
OIDC_CLIENT_ID=server-client-id
OIDC_CLIENT_SECRET=replace-with-secret
# For production, set this to your deployed admin/client origins (e.g., https://admin.example.com,https://app.example.com).
# For development, provide explicit origins such as http://localhost:5173,http://localhost:3000.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
AUTH_DOMAIN=auth.example.com
AUTH_CLIENT_ID=server-client-id
AUTH_CLIENT_SECRET=replace-with-secret

# Map packages
MAP_STORAGE_PATH=/var/lib/argex-gps/map-packages
MAP_ARCHIVE_PATH=/var/lib/argex-gps/map-packages/archives
MAP_ARCHIVE_MOUNT=./map-packages/archives
MAP_PROVIDER_TOKEN=map-provider-token
MAP_PACKAGE_INDEX_PATH=/var/lib/argex-gps/map-packages/index.json
MAP_PACKAGE_DOWNLOAD_URL=http://localhost:4000/maps/download

# Admin/mobile settings page defaults surfaced by the API
SETTINGS_DEFAULT_REGION=north-america
SETTINGS_DEFAULT_MAP_STYLE=outdoors
SETTINGS_FEATURE_FLAGS=offline-sync,map-packages,telemetry
