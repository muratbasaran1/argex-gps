# Admin panel build environment
# Copy this file to admin/.env and adjust values for your environment.

# API endpoints
VITE_API_BASE_URL=http://localhost:4000
VITE_API_WEBSOCKET_URL=ws://localhost:4000/socket
VITE_TILE_CDN_URL=http://localhost:4000/tiles
VITE_MAP_PACKAGE_BASE_URL=http://localhost:4000/maps
VITE_MAP_PACKAGE_INDEX_URL=http://localhost:4000/maps/index.json
VITE_MAP_PACKAGE_DOWNLOAD_URL=http://localhost:4000/maps/download
VITE_MAP_PACKAGE_MANIFEST_URL=http://localhost:4000/maps/manifest.json
API_BASE_URL=http://localhost:4000

# Auth/OIDC (match your identity provider)
VITE_AUTH_DOMAIN=auth.example.com
VITE_AUTH_CLIENT_ID=admin-ui-client-id
VITE_AUTH_AUDIENCE=argex-gps-api
VITE_AUTH_SCOPE=openid profile email offline_access
VITE_AUTH_REDIRECT_URI=http://localhost:4173/callback
VITE_AUTH_POST_LOGOUT_REDIRECT_URI=http://localhost:4173
OIDC_AUTHORIZE_URL=https://auth.example.com/authorize
OIDC_TOKEN_URL=https://auth.example.com/token
OIDC_CLIENT_ID=admin-ui-client-id
OIDC_SCOPE=openid profile email offline_access
OIDC_AUDIENCE=argex-gps-api
OIDC_REDIRECT_URI=http://localhost:4173/callback

# Default settings surfaced in the admin settings screen
VITE_SETTINGS_DEFAULT_REGION=north-america
VITE_SETTINGS_DEFAULT_MAP_STYLE=outdoors
VITE_SETTINGS_FEATURE_FLAGS=offline-sync,map-packages,telemetry
VITE_UI_BRAND=Argex GPS
