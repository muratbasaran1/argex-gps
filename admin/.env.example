# Admin panel environment template

# API endpoints consumed by the admin settings page
VITE_API_BASE_URL=https://api.example.com
VITE_API_WEBSOCKET_URL=wss://api.example.com/socket
VITE_TILE_CDN_URL=https://cdn.example.com/tiles
VITE_MAP_PACKAGE_BASE_URL=https://downloads.example.com/maps
VITE_MAP_PACKAGE_INDEX_URL=https://downloads.example.com/maps/index.json

# Auth (OIDC/JWT) placeholders used for token exchange and validation
VITE_AUTH_DOMAIN=auth.example.com
VITE_AUTH_CLIENT_ID=your-admin-client-id
VITE_AUTH_AUDIENCE=argex-gps-api
VITE_AUTH_SCOPE=openid profile email offline_access
VITE_AUTH_REDIRECT_URI=http://localhost:5173/callback
VITE_AUTH_POST_LOGOUT_REDIRECT_URI=http://localhost:5173/

# Settings UI defaults
VITE_SETTINGS_DEFAULT_MAP_STYLE=outdoors
VITE_SETTINGS_FEATURE_FLAGS=admin-dashboard,map-packages
