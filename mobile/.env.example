# Mobile/client environment template

# API endpoints used by the one-page settings UI (consumed at build time via @env)
API_BASE_URL=https://api.example.com
API_WEBSOCKET_URL=wss://api.example.com/socket
PUBLIC_API_URL=https://api.example.com
TILE_CDN_URL=https://cdn.example.com/tiles

# Auth (OIDC)
AUTH_DOMAIN=auth.example.com
AUTH_CLIENT_ID=your-mobile-client-id
AUTH_AUDIENCE=argex-gps-api
AUTH_SCOPE=openid profile email offline_access

# Offline map packages
MAP_PACKAGE_DIR=./map-packages/regions
MAP_PACKAGE_ARCHIVE=./map-packages/archives
MAP_PACKAGE_INDEX_URL=https://downloads.example.com/maps/index.json
MAP_PACKAGE_DOWNLOAD_URL=https://downloads.example.com/maps/download

# Settings defaults shown to end users
SETTINGS_DEFAULT_REGION=north-america
SETTINGS_DEFAULT_MAP_STYLE=outdoors
